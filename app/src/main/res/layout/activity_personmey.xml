<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wxs.fastmail.activity.PersonmeyActivity"
    android:orientation="vertical"
    android:background="@color/bg_gray1"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/bg_gray1"
        >
        <!--自定义控件-->
        <TextView
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textSize="19sp"
            android:textColor="@color/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的账户" />
    </android.support.v7.widget.Toolbar>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:paddingTop="20dp"
         android:paddingBottom="30dp"
         android:paddingLeft="40dp"
         android:paddingRight="10dp"
         android:background="@color/white"
         android:gravity="center"
         >
       <LinearLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >
           <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="余额（元）"
             android:textSize="19dp"
             android:layout_marginLeft="10dp"
             />
          <TextView
              android:layout_marginTop="20dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="19.79"
              android:textSize="19dp"
              android:layout_marginLeft="20dp"
              android:textColor="@color/black"
              />
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical"
           >
           <LinearLayout
               android:id="@+id/lay_recharge"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:paddingLeft="10dp">

               <ImageView
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_marginTop="8dp"
                   android:background="@drawable/person_recharge" />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="30dp"
                   android:layout_marginTop="15dp"
                   android:text="充值"
                   android:textColor="@color/black"
                   android:textSize="17dp" />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/lay_crash"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:paddingTop="10dp"
               android:paddingLeft="10dp"
               >
               <ImageView
                   android:layout_marginTop="8dp"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:background="@drawable/person_cash"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="提现"
                   android:textSize="17dp"
                   android:layout_marginTop="15dp"
                   android:layout_marginLeft="30dp"
                   android:textColor="@color/black"
                   />
           </LinearLayout>
       </LinearLayout>
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_marginTop="25dp"
         android:background="@color/white">
        <TextView
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="历史账单"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="19sp"
            />
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07-02"
                android:textSize="16sp"
                />
            <TextView
                android:layout_marginLeft="100dp"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成订单"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:text="+10元"
                android:textColor="@color/red"
                android:textSize="17sp" />
        </LinearLayout>
         <LinearLayout
             android:layout_marginTop="15dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:paddingLeft="15dp"
             android:paddingTop="15dp"
             android:paddingRight="15dp"
             >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="07-02"
                 android:textSize="16sp"
                 />
             <TextView
                 android:layout_marginLeft="51dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="申请快递人支付押金"
                 android:textSize="16sp" />
             <TextView
                 android:layout_marginLeft="45dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="- 10元"
                 android:textSize="16sp"
                 android:textColor="@color/red"
                 />
         </LinearLayout>
         <LinearLayout
             android:layout_marginTop="15dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:paddingLeft="15dp"
             android:paddingTop="15dp"
             android:paddingBottom="15dp"
             android:paddingRight="15dp"
             >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="07-02"
                 android:textSize="16sp"
                 />
             <TextView
                 android:layout_marginLeft="100dp"

                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="账户充值"
                 android:textSize="16sp" />
             <TextView
                 android:layout_marginLeft="70dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="+100元"
                 android:textSize="17sp"
                 android:textColor="@color/red"
                 />
         </LinearLayout>
     </LinearLayout>
</LinearLayout>
