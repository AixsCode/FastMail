<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wxs.fastmail.activity.ApplyOneActivity"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/tv_introduce"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="什么是自由快递人?"
        android:textColor="@color/black"
        android:textSize="17sp"
        />
    <TextView
        android:paddingLeft="25dp"
        android:paddingRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自由快递人是一种工作时间自由、接件自由和收益自由的新型职业：利用闲暇时间，结合自己的地理位置和个人意愿，为有需要的商家或者个人捎带快件，并从中获取一定利润。普通用户可以通过实名认证和信用机制考核来申请成为自由快递人。"
        android:textColor="@color/text1"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/tv_apply"
        android:layout_marginTop="160dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="申请自由快递人"
        android:layout_marginLeft="25dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_below="@+id/tv_introduce"
        android:layout_alignParentEnd="true" />
       <ImageView
           android:id="@+id/iv_progress"
           android:layout_marginTop="35dp"
           android:layout_marginLeft="30dp"
           android:layout_width="30dp"
           android:layout_height="200dp"
           android:background="@drawable/apply_progress"
           android:layout_below="@+id/tv_apply"
           android:layout_alignStart="@+id/tv_apply"
           android:layout_marginStart="37dp" />
    <TextView
        android:layout_marginLeft="40dp"
        android:layout_marginTop="265dp"
        android:layout_toRightOf="@+id/iv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="信用积分达到500"
        android:textColor="@color/black"
        android:textSize="16sp"
        />
    <TextView
        android:layout_marginLeft="40dp"
        android:layout_marginTop="320dp"
        android:layout_toRightOf="@+id/iv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实名认证"
        android:textColor="@color/black"
        android:textSize="16sp"
        />
    <TextView
        android:layout_marginLeft="40dp"
        android:layout_marginTop="380dp"
        android:layout_toRightOf="@+id/iv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付押金"
        android:textColor="@color/black"
        android:textSize="16sp"
        />
    <TextView
        android:layout_marginLeft="40dp"
        android:layout_marginTop="440dp"
        android:layout_toRightOf="@+id/iv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="认证通过"
        android:textColor="@color/black"
        android:textSize="16sp"
        />
    <Button
        android:layout_marginLeft="90dp"
        android:id="@+id/btn_sure_apply"
        android:layout_width="160dp"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:background="@drawable/btn_getorder"
        android:text="确认申请"
        android:layout_below="@+id/iv_progress"
        android:textColor="@color/white"
        android:textSize="15sp"
        />

</RelativeLayout>
