<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray1">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/back"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:background="@drawable/back"
            android:clickable="true"
            />
        <!--自定义控件-->
        <TextView
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认订单" />
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="465dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="----商品描述----"
                    android:gravity="center"
                    android:textSize="17.5sp"
                    android:textColor="@color/text1"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="麻辣小龙虾"
                            android:textSize="15sp"
                            android:textColor="@color/text1"
                            />
                        <TextView
                            android:layout_marginLeft="190dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x1"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22.00"
                            android:textSize="16sp"
                            android:layout_marginLeft="15dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="一杯果奶茶"
                            android:textSize="15sp"
                            android:textColor="@color/text1"
                            />
                        <TextView
                            android:layout_marginLeft="190dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x2"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12.00"
                            android:textSize="16sp"
                            android:layout_marginLeft="15dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="湘西霸王蛙"
                            android:textSize="15sp"
                            android:textColor="@color/text1"
                            />
                        <TextView
                            android:layout_marginLeft="190dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x1"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24.00"
                            android:textSize="16sp"
                            android:layout_marginLeft="15dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收件人姓名"
                    android:textColor="@color/text1"
                    android:textSize="15sp"
                    />
                <EditText
                    android:id="@+id/et_name"
                    android:layout_marginLeft="190dp"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:background="@null"
                    android:text="思想聚焦"
                    android:textSize="13sp"
                    android:textColor="@color/text1"
                    android:gravity="right"
                    />
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/person_more"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.55dp"
                android:background="@color/decoration" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系方式"
                    android:textColor="@color/text1"
                    android:textSize="15sp"
                    />
                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginLeft="180dp"
                    android:background="@null"
                    android:hint="输入联系方式"
                    android:text="15858196282"
                    android:textColorHint="@color/hints"
                    android:textSize="13sp"
                    android:gravity="right"
                    />
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/person_more"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.55dp"
                android:background="@color/decoration"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货地址"
                    android:textColor="@color/text1"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tv_takeaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="无锡市观山路无锡栈美精品酒店"
                    android:textSize="13sp"
                    android:layout_marginLeft="78dp"
                    android:gravity="center_vertical|right"
                    android:layout_gravity="right"
                    />
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/person_more"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.55dp"
                android:background="@color/decoration"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买地址"
                    android:textColor="@color/text1"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_getaddress"
                    android:layout_marginLeft="65dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="缇香阁（滨湖区太湖街道锡南路"
                    android:gravity="center_vertical|right"
                 />
                <ImageView

                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/person_more" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.55dp"
                android:background="@color/decoration"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:weightSum="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送达时间"
                    android:textColor="@color/text1"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="137dp"
                    android:text="立即送达"
                    android:textColor="@color/text1"
                    android:textSize="13sp"
                    android:gravity="center_vertical|right"
                    />

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/person_more" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.55dp"
                android:background="@color/decoration"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物品金额"
                    android:textColor="@color/text1"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/et_money"
                    android:layout_marginLeft="250dp"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:background="@null"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:text="58元"
                    android:gravity="center_vertical|right"
                    android:textCursorDrawable="@null"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.55dp"
                android:background="@color/decoration"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快递金额"
                    android:textColor="@color/text1"
                    android:textSize="15sp"
                    android:paddingBottom="10dp"/>
                <TextView
                    android:id="@+id/tv_sendmoney"
                    android:layout_marginLeft="250dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30元"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/made_order_pay"/>
</LinearLayout>
