<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray1"
    tools:context="com.wxs.fastmail.activity.ProgresspostActivity"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/back"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:background="@drawable/back"
            android:clickable="true"
            />
        <!--自定义控件-->
        <TextView
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="寄送订单" />
    </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:id="@+id/Fram_map"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="230dp">
        <com.baidu.mapapi.map.MapView
            android:id="@+id/pro_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            />
    </FrameLayout>
    <com.baoyachi.stepview.HorizontalStepView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/Fram_map"
        android:id="@+id/step_view"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/step_view"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/lay_postchat"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快递员"
                android:textSize="15dp"
                />

            <ImageView
               android:id="@+id/iv_dispatch"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_marginLeft="15dp"
               android:background="@drawable/order_personnull"
            />
            <TextView
                android:id="@+id/tv_dispatch"
                android:layout_marginTop="10dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text=""
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/tv_state"
                android:layout_marginTop="10dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="未接单"
                android:layout_marginLeft="90dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lay_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:gravity="center_horizontal"
        android:background="@color/bg_gray1"
        android:layout_below="@+id/linearLayout2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="── 当前订单 ──"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="40dp"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/mail_getperson"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 收件人:   思想    15106170029"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="7dp"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="23dp"
                android:background="@drawable/mail_buyaddress"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 取货地址:  朝阳区五爱人家正门"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="7dp"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/mail_getaddress"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 收货地址:  江苏省无锡市滨湖区"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="13dp"
        android:background="@color/white"
        android:paddingBottom="7dp"
        android:paddingLeft="5dp"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/btn_sureorder"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="19.5dp"
            android:background="@drawable/btn_getorder"
            android:text="确认交接"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/btn_feedback"
            android:layout_marginLeft="21dp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="投诉反馈"
            android:textColor="@color/text1"
            android:background="@drawable/btn_feedback"
            />
    </LinearLayout>
</RelativeLayout>
