<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray1"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/back"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:background="@drawable/back"
            android:clickable="true"
       />
        <!--自定义控件-->
        <TextView
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="团购" />
    </android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.55dp"
        android:background="@color/decoration" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="──物品说明──"
            android:textSize="17sp"
            android:textColor="@color/text1"
            android:gravity="center_horizontal"
            />
        <EditText
            android:layout_marginTop="3dp"
            android:id="@+id/et_publish"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@null"
            android:gravity="top"
            android:hint="(发起团购后您将作为发件人发货)"
            android:padding="15dp"
            android:textColorHint="@color/hints"
            android:textSize="13sp" />
        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:horizontalSpacing="5dp"
            android:numColumns="3"
            android:verticalSpacing="5dp">
        </GridView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/lay_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingTop="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="配图说明"
                android:textColor="@color/text1"
                android:textSize="15sp" />
            <ImageView
                android:id="@+id/iv_takephoto"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="250dp"
                android:background="@drawable/order_takephoto" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
             android:id="@+id/lay_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingTop="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="团购人数"
                android:textColor="@color/text1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginLeft="190dp"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingTop="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="团购金额"
                android:textColor="@color/text1"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/et_money"
                android:layout_marginLeft="190dp"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:background="@null"
                android:hint="输入团购金额"
                android:textSize="13sp"
                android:textColorHint="@color/hints"
                android:gravity="right"
                />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="元"
                  android:textColor="@color/red"
                  android:layout_marginLeft="7dp"
                  />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lay_buyaddress"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingTop="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="购买地址"
                android:textColor="@color/text1"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tv_buyaddress"
                android:layout_width="170dp"
                android:layout_height="25dp"
                android:layout_marginLeft="92dp"
                android:gravity="center_vertical|right"
                android:text=""/>

              <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/person_more"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_teambuy"
        android:layout_marginTop="40dp"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="发起团购"
        android:textColor="@color/white"
        android:background="@drawable/btn_publish_style"
        android:layout_gravity="center"
     />
</LinearLayout>
