<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wxs.fastmail.activity.VoiceActivity"
    android:orientation="vertical"
    >
    <TextView
         android:id="@+id/tv_1"
         android:layout_marginTop="70dp"
         android:layout_centerHorizontal="true"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="说出需要购买的商品以及描述"
         android:textSize="20sp"
         android:textColor="@color/black"
         android:visibility="visible"
     />
     <TextView
         android:id="@+id/tv_2"
         android:layout_below="@+id/tv_1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="例如"
         android:textColor="@color/text1"
         android:textSize="15sp"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="30dp"
         />
      <TextView
        android:id="@+id/tv_3"
        android:layout_below="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我要买一包中华香烟"
        android:textColor="@color/text1"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        />
     <TextView
       android:id="@+id/tv_4"
        android:layout_below="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我要买一瓶冰镇的可口可乐"
        android:textColor="@color/text1"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        />
     <TextView
        android:id="@+id/tv_5"
        android:layout_below="@+id/tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我想要西湖区NIke专卖店的篮球鞋"
        android:textColor="@color/text1"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:visibility="visible"
      />
    <TextView
        android:id="@+id/tv_6"
        android:layout_below="@+id/tv_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="······"
        android:textColor="@color/text1"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:visibility="visible"
      />
    <com.cunoraz.gifview.library.GifView
        android:id="@+id/order_gif"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:visibility="gone"
        app:gif="@drawable/order_gif4"
        android:layout_marginTop="250dp"
     />
    <TextView
        android:id="@+id/tv_time"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/tv_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 s"
        android:textColor="@color/text1"
        android:textSize="17sp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
     />
     <TextView
         android:id="@+id/tv_7"
         android:layout_marginTop="150dp"
         android:layout_below="@+id/tv_6"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="按下说话"
         android:textSize="13sp"
         android:textColor="@color/text1"
         android:layout_centerHorizontal="true"
         />
   <ImageButton
        android:id="@+id/btn_voicemade"
        android:layout_below="@+id/tv_7"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/btn_voice_selector"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
</RelativeLayout>
