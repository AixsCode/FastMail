<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230.5dp"
    android:layout_height="159dp"
    android:background="@drawable/postdialog_style"
    >
    <TextView
        android:id="@+id/tv_notify"
        android:paddingTop="10dp"
        android:layout_marginLeft="95dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示"
        android:textColor="@color/black"
        android:textSize="20sp"
        />
     <TextView
         android:paddingLeft="15dp"
         android:paddingRight="15dp"
         android:id="@+id/tv_ms"
         android:layout_marginTop="20dp"
         android:layout_below="@+id/tv_notify"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="今日接单保险费¥ 2元, 安心接单一整天,是否接单？"
         android:textColor="@color/text1"
         android:textSize="15dp"
         />
      <View
          android:id="@+id/view_line"
          android:layout_marginTop="20dp"
          android:layout_below="@+id/tv_ms"
          android:layout_width="250dp"
          android:layout_height="0.55dp"
          android:background="@color/colorPrimary"
       />
      <Button
        android:id="@+id/btn_deny"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:text="否"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/btn_insurance_deny"
        android:layout_below="@+id/view_line"
        android:layout_alignParentStart="true"
          android:layout_alignParentBottom="true"
        />
       <Button
        android:id="@+id/btn_yes"
        android:layout_marginLeft="116dp"
        android:layout_width="115dp"
        android:layout_height="42dp"
        android:text="是"
        android:textColor="@color/white"
        android:background="@drawable/btn_insurance"
        android:layout_below="@+id/view_line"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
