<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_gray1"
        android:weightSum="1">
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="0.11"
            android:src="@drawable/post_picture3"
            />
        <LinearLayout
           android:layout_marginTop="8dp"
           android:paddingTop="15dp"
           android:background="@color/white"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:gravity="center_horizontal">
        <LinearLayout
           android:id="@+id/lay_post"
           android:paddingLeft="40dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="18dp"
            >
           <ImageView
               android:layout_width="25dp"
               android:layout_height="30dp"
               android:background="@drawable/post_icon"
               />
           <TextView
               android:id="@+id/tv_post"
               android:paddingLeft="30dp"
               android:paddingTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="选择发货信息"
               android:textSize="13sp"
               android:textColor="@color/bg_gray3"
               />
       </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="76dp"
            android:background="@color/decoration"
            android:layout_marginRight="40dp"
            />
        <LinearLayout
            android:id="@+id/lay_get"
            android:paddingTop="20dp"
            android:paddingLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:background="@drawable/post_icon1"
                />
            <TextView
                android:id="@+id/tv_get"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请完善收货信息"
                android:textSize="13sp"
                android:clickable="true"
                android:textColor="@color/bg_gray3"
                />
        </LinearLayout>
          <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="76dp"
            android:background="@color/decoration"
            android:layout_marginRight="40dp"
            />
           <com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
               android:id="@+id/progressbar"
               android:layout_width="45dp"
               android:layout_height="45dp"
               android:layout_gravity="center"
               android:layout_marginBottom="30dp"
               android:visibility="gone"
               app:mlpb_progress_color="@color/colorPrimary"
               app:mlpb_progress_stoke_width="3dp" />
           <LinearLayout
               android:id="@+id/lay_time"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:orientation="horizontal"
               android:paddingLeft="40dp"
               android:paddingTop="25dp">
               <ImageView
                   android:layout_width="25dp"
                   android:layout_height="25.5dp"
                   android:layout_marginBottom="5dp"
                   android:background="@drawable/post_time" />
               <EditText
                   android:id="@+id/et_time"
                   android:layout_width="80dp"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="30dp"
                   android:clickable="true"
                   android:paddingTop="5dp"
                   android:hint="取件时间"
                   android:textColor="@color/hints"
                   android:background="@null"
                   android:textSize="13sp" />

               <TextView
                   android:id="@+id/tv_insurance"
                   android:paddingTop="5dp"
                   android:layout_width="50dp"
                   android:layout_height="wrap_content"
                   android:text="不保价"
                   android:textSize="13sp"
                   android:layout_marginLeft="80dp"
                   />

               <ImageView
                   android:id="@+id/iv_insurance"
                   android:layout_marginLeft="30dp"
                   android:layout_width="8dp"
                   android:layout_height="13dp"
                   android:layout_marginTop="7dp"
                   android:background="@drawable/post_more" />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:orientation="horizontal"
               android:paddingBottom="7dp"
               android:paddingTop="20dp">
               <LinearLayout
                   android:id="@+id/lay_type"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:gravity="center_horizontal"
                   android:orientation="vertical">

                   <ImageView
                       android:id="@+id/iv_type"
                       android:layout_width="32dp"
                       android:layout_height="32dp"
                       android:background="@drawable/post_type" />
                   <TextView
                       android:id="@+id/tv_type"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:clickable="true"
                       android:text="物品类型"
                       android:textColor="@color/text1"
                       android:textSize="15sp" />
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/lay_weight"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:gravity="center_horizontal"
                   android:orientation="vertical">
                   <ImageView
                       android:id="@+id/iv_weight"
                       android:layout_width="32dp"
                       android:layout_height="32dp"
                       android:background="@drawable/post_weight" />
                   <TextView
                       android:id="@+id/tv_weight"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:clickable="true"
                       android:text="物品重量"
                       android:textColor="@color/text1"
                       android:textSize="15sp" />
               </LinearLayout>
           </LinearLayout>
           <Button
               android:id="@+id/btn_post"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:layout_marginBottom="8dp"
               android:layout_marginTop="30dp"
               android:background="@drawable/btn_post_style"
               android:clickable="true"
               android:text="我要寄快递"
               android:textColor="@color/white"
               android:textSize="16sp"
               />
       </LinearLayout>
       <include layout="@layout/post_ms_item"/>
       <include layout="@layout/post_ms_item1"/>
    </LinearLayout>
</ScrollView>
