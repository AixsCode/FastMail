<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wxs.fastmail.activity.PostgetActivity"
    android:orientation="vertical"
    android:background="@color/bg_gray1"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:background="@drawable/back"
            />
        <!--自定义控件-->
        <TextView
            android:layout_centerInParent="true"
            android:layout_marginLeft="128dp"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="寄件地址" />
        <TextView
            android:id="@+id/btn_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textSize="16sp"
            android:textColor="@color/back"
            android:layout_marginLeft="100dp"
            />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/lay_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="14dp"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="寄件人"
            android:textColor="@color/text1"
            android:textSize="15sp"
            />
        <EditText
            android:id="@+id/et_name"
            android:layout_marginLeft="175dp"
            android:layout_width="100dp"
            android:layout_height="17dp"
            android:background="@null"
            android:hint="输入姓名"
            android:textSize="13sp"
            android:textColorHint="@color/hints"
            android:gravity="center_vertical|right"
            />
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="11dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/person_more"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.55dp"
        android:background="@color/decoration" />
    <LinearLayout
        android:id="@+id/lay_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话"
            android:textColor="@color/text1"
            android:textSize="15sp"
            />
        <EditText
            android:id="@+id/et_phone"
            android:layout_marginLeft="100dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:background="@null"
            android:textColorHint="@color/hints"
            android:gravity="center_vertical|right"
            />
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="22dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/person_more"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.55dp"
        android:background="@color/decoration" />
    <LinearLayout
        android:id="@+id/lay_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@color/white"
        android:paddingLeft="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在地区"
            android:textColor="@color/text1"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_area"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text=""
            android:textSize="13sp"
            android:layout_marginLeft="107dp"
            android:gravity="center_vertical|right"
            android:layout_gravity="right"
            />
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="14dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/person_more"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.55dp"
        android:background="@color/decoration" />
    <LinearLayout
        android:id="@+id/lay_street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@color/white"
        android:paddingLeft="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在街道"
            android:textColor="@color/text1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_street"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginLeft="107dp"
            android:gravity="center_vertical|right"
            android:text=""
            android:textSize="13sp" />

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="14dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/person_more"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.55dp"
        android:background="@color/decoration" />
    <EditText
        android:layout_marginTop="7dp"
        android:id="@+id/et_put"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:gravity="top"
        android:hint="填写详细地址,不少于五个字"
        android:padding="15dp"
        android:textColorHint="@color/hints"
        android:textSize="13sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.55dp"
        android:background="@color/decoration"
        />
</LinearLayout>
