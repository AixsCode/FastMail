<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wxs.fastmail.activity.ScanSuccessActivity"
    android:background="@color/bg_gray1"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        >
        <!--自定义控件-->
        <TextView
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textSize="19sp"
            android:textColor="@color/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单完成" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:gravity="center_horizontal"
            android:text="恭喜您成功完成此次交易"
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />
        <TextView
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="此次订单为您服务的是 "
            android:textColor="@color/text1"
            android:textSize="16sp"
            />
         <LinearLayout
             android:layout_marginTop="50dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:paddingLeft="40dp"
             android:gravity="center_horizontal"
             >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="发件人"
               android:textColor="@color/text1"
               android:textSize="15sp"
               android:layout_marginTop="10dp"
               />
             <ImageView
                 android:layout_marginLeft="50dp"
                 android:layout_width="40dp"
                 android:layout_height="40dp"
                 android:background="@drawable/mail_buy_person6"
                 />
              <TextView
                  android:id="@+id/tv_interest1"
                  android:gravity="center_horizontal"
                  android:paddingTop="2dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="90dp"
                  android:layout_width="55dp"
                  android:layout_height="25dp"
                  android:text="关注"
                  android:textSize="15sp"
                  android:textColor="@color/colorPrimary"
                  android:background="@drawable/btn_team_buy"
                  />
         </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:gravity="center_horizontal"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快递人"
                android:textColor="@color/text1"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:layout_marginLeft="50dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/team_person_11"
                />
            <TextView
                android:id="@+id/tv_interest2"
                android:gravity="center_horizontal"
                android:paddingTop="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="90dp"
                android:layout_width="55dp"
                android:layout_height="25dp"
                android:text="关注"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/btn_team_buy"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="85dp"
        android:layout_height="79dp"
        android:background="@drawable/scan_success_label"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentEnd="true"/>
    <Button
         android:id="@+id/btn_comment"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="490dp"
         android:layout_width="155dp"
         android:layout_height="50dp"
         android:background="@drawable/btn_getorder"
         android:text="立即评价"
         android:textColor="@color/white"
         android:textSize="15sp"
         />
      <Button
        android:id="@+id/btn_feedback"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="555dp"
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_feedback"
        android:text="我要反馈"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        />
</RelativeLayout>
