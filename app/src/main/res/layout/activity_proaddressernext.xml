<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wxs.fastmail.activity.ProaddressernextActivity"
    android:orientation="vertical"
    android:background="@color/bg_gray1"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/back"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:background="@drawable/back"
            android:clickable="true"
            />
        <!--自定义控件-->
        <TextView
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单进度" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/lay_getperson"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收件人"
            android:textSize="17sp"
            android:textColor="@color/text1"
            />
        <ImageView
            android:id="@+id/iv_get"
            android:layout_marginLeft="40dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/team_person_4"
            />
        <TextView
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="思想    "
            android:textColor="@color/text1"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/tv_contact1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="和他联系"
            android:gravity="center"
            android:textColor="@color/red"
            android:background="@drawable/contact_bg"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        android:layout_below="@+id/lay_getperson"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快递人"
            android:textSize="17sp"
            android:textColor="@color/text1"
            />
        <ImageView
            android:id="@+id/iv_send"
            android:layout_marginLeft="40dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/order_personnull"
            />
        <TextView
            android:id="@+id/tv_send"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text1"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/tv_contact2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="未接单"
            android:gravity="center"
            android:textColor="@color/text1"
            android:background="@drawable/contact_bg"
            />
     </LinearLayout>
     <com.baidu.mapapi.map.MapView
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="120dp"
        android:id="@+id/mMapView"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:clickable="true"
        />
    <LinearLayout
        android:id="@+id/lay_showtime"
        android:layout_below="@+id/mMapView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingLeft="10dp"
        >
        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="距离5km   约20 min后到达"
            android:textSize="18sp"
            android:textColor="@color/text1"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btnSend"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lay_showtime"
        android:layout_marginTop="20dp"
        android:layout_width="140dp"
        android:layout_height="47dp"
        android:text="确认发货"
        android:textColor="@color/white"
        android:background="@drawable/btn_getorder"
        />
</RelativeLayout>
