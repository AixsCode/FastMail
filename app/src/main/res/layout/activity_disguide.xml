<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wxs.fastmail.activity.DisguideActivity"
    android:background="@color/white"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <!--自定义控件-->
        <TextView
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快速配送" />
    </android.support.v7.widget.Toolbar>
    <View
        android:layout_marginTop="185dp"
        android:layout_width="match_parent"
        android:layout_height="0.55dp"
        android:background="@color/decoration" />
    <LinearLayout
        android:id="@+id/lay_person"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="30dp"
        android:layout_marginTop="10dp"
        >
      <LinearLayout
          android:layout_marginTop="20dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
          <TextView
              android:gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="40dp"
              android:text="收件人"
              android:textSize="16sp"
              />
          <ImageView
              android:layout_marginLeft="20dp"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:background="@drawable/team_person_4"
              />
           <TextView
               android:layout_marginLeft="25dp"
               android:textSize="15sp"
               android:layout_width="50dp"
               android:layout_height="wrap_content"
               android:text="思想"
               android:textColor="@color/black"
               />
           <TextView
               android:id="@+id/tv_contact1"
               android:layout_marginLeft="45dp"
               android:textSize="15sp"
               android:layout_width="80dp"
               android:layout_height="wrap_content"
               android:text="和他联系"
               android:gravity="center"
               android:textColor="@color/red"
               android:background="@drawable/contact_bg"
               />
      </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="发件人"
                android:textSize="16sp"
                />
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/mail_buy_person4"
                />
            <TextView
                android:layout_marginLeft="25dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大西瓜"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_contact2"
                android:layout_marginLeft="53dp"
                android:textSize="15sp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="和他联系"
                android:gravity="center"
                android:textColor="@color/red"
                android:background="@drawable/contact_bg"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="285dp"
        android:layout_width="match_parent"
        android:layout_height="0.55dp"
        android:background="@color/decoration"
        />
   <LinearLayout
       android:id="@+id/lay_address"
       android:layout_below="@+id/lay_person"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="20dp"
       android:paddingLeft="30dp"
       android:paddingRight="30dp"
       >
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/buydialog_green"
        />
     <TextView
         android:layout_marginLeft="20dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="发货地址:"
         android:textSize="16sp"
         />
      <TextView
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:text="朝阳区五爱人家正门"
          android:layout_marginLeft="40dp"
          />
      </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="20dp"
           android:paddingLeft="30dp"
           android:paddingRight="30dp"
           >
           <ImageView
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:background="@drawable/buydialog_red"
               />
           <TextView
               android:layout_marginLeft="20dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="收货地址:"
               android:textSize="16sp"
               />
           <TextView
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:text="江苏无锡滨湖区"
               android:layout_marginLeft="40dp"
               />
       </LinearLayout>
   </LinearLayout>
    <View
        android:layout_marginTop="370dp"
        android:layout_width="match_parent"
        android:layout_height="0.55dp"
        android:background="@color/decoration"
     />
    <LinearLayout
        android:id="@+id/lay_time"
        android:layout_below="@+id/lay_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
         <ImageView
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:background="@drawable/mail_time"
             />
          <TextView
              android:layout_width="80dp"
              android:layout_height="wrap_content"
              android:text="送达时间:"
              android:layout_marginLeft="20dp"
              android:textSize="16sp"
              />
          <TextView
              android:layout_width="80dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="25dp"
              android:text="18:50"
              />
      </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/mail_gift"
                />
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="物品详情:"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="幸福西饼手工红色生日蛋糕 " />
        </LinearLayout>
    </LinearLayout>
   <LinearLayout
       android:layout_below="@+id/lay_time"
       android:id="@+id/lay_money"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >
       <LinearLayout
           android:layout_marginTop="30dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:paddingLeft="30dp"
           >
           <ImageView
               android:layout_marginTop="3dp"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:background="@drawable/mail_money"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="20dp"
               android:text="跑腿费 :"
               android:textSize="17sp" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="50dp"
               android:text="30"
               android:textColor="@color/red"
               android:textSize="20sp" />
           <TextView
               android:layout_marginLeft="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="元"
               />
       </LinearLayout>
   </LinearLayout>
    <View
        android:layout_marginTop="435dp"
        android:layout_width="match_parent"
        android:layout_height="0.55dp"
        android:background="@color/decoration"
        />
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/lay_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/lay_btn_guide"
            android:layout_width="300dp"
            android:layout_height="48.5dp"
            android:background="@color/bg_gray1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/guide"
                />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="规划路线"
                android:textColor="@color/text1"
                android:textSize="17sp" />
        </LinearLayout>
        <Button
            android:layout_alignTop="@+id/lay_btn_guide"
            android:id="@+id/btn_get_things"
            android:layout_width="wrap_content"
            android:layout_height="48.5dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_disduide"
            android:text="确认取货"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>
