<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:paddingTop="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="今日拼单达人榜"
            android:textColor="@color/black"
            android:textSize="17sp"
            />
    </LinearLayout>
   <LinearLayout
       android:layout_marginTop="15dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:paddingLeft="15dp"
       android:paddingBottom="5dp"
       android:paddingTop="5dp"
       android:background="@color/white"
       >
      <ImageView
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:background="@drawable/medal1"
          />
       <ImageView
           android:layout_marginLeft="20dp"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:background="@drawable/team_person_5"
           />
       <TextView
           android:layout_marginLeft="30dp"
           android:layout_marginTop="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="小苹果"
           android:textColor="@color/text1"
           android:textSize="16sp"
           />
         <TextView
             android:layout_marginLeft="65dp"
             android:layout_marginTop="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="已成功拼单 42人 "
             />
   </LinearLayout>

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@color/white"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/medal2"
            />
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/team_person_10"
            />
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大苹果"
            android:textColor="@color/text1"
            android:textSize="16sp"
            />
        <TextView
            android:layout_marginLeft="65dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已成功拼单 32人 "
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@color/white"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/medal3"
            />
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/team_person_11"
            />
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大西梅"
            android:textColor="@color/text1"
            android:textSize="16sp"
            />
        <TextView
            android:layout_marginLeft="65dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已成功拼单 25人 "
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="4"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="17dp"
            />
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/team_person_12"
            />
        <TextView
            android:layout_marginLeft="30dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小西梅"
            android:textColor="@color/text1"
            android:textSize="16sp"
            />
        <TextView
            android:layout_marginLeft="65dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已成功拼单 23人 "
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="5"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="17dp"
            />
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/team_person_6"
            />
        <TextView
            android:layout_marginLeft="30dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大芒果"
            android:textColor="@color/text1"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:text="已成功拼单 20人 " />
    </LinearLayout>



</LinearLayout>
