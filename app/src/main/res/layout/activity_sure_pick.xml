<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wxs.fastmail.activity.SurePickActivity"
    android:background="@color/bg_gray1"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:background="@drawable/back"
            />
        <!--自定义控件-->
        <TextView
            android:layout_centerInParent="true"
            android:layout_marginLeft="128dp"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认取货" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/lay_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true">
        <TextView
           android:layout_marginLeft="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="开箱拍照"
           android:textColor="@color/black"
           android:textSize="16sp"
           />
          <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
          />
          <TextView
              android:layout_marginLeft="170dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="违禁物品查询"
              android:textColor="@color/dodgerblue"
           />
    </LinearLayout>
      <LinearLayout
        android:background="@color/white"
        android:layout_below="@+id/lay_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
      <TextView
         android:layout_marginLeft="10dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="请多角度拍摄,拍照不符合规范,出现纠纷时"
         android:textColor="@color/text1"
         android:textSize="15sp"
         />
      <TextView
          android:layout_marginLeft="10dp"
          android:layout_marginTop="5dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="将不能作为佐证 !"
          android:textColor="@color/text1"
          android:textSize="15sp"
         />
        <GridView
            android:layout_marginTop="25dp"
            android:id="@+id/gridView"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:horizontalSpacing="5dp"
            android:numColumns="4"
            android:verticalSpacing="5dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_surepick"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_disduide"
        android:text="确认取货"
        android:textSize="18sp"
        android:textColor="@color/white"
        />
</RelativeLayout>
