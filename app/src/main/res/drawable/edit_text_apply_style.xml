<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 填充颜色 -->
    <solid android:color="#FFFFFF"/>
    <!--设置圆角弧度-->
    <corners android:radius="3dp"/>

    <!--边框宽度及颜色-->
    <stroke
        android:width="1dp"
        android:color="@color/text1"/>
    <!--文字与边界的距离-->
    <padding
        android:left="5dp"
        android:right="5dp"
        android:top="10dp"/>
</shape>